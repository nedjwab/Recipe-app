<div id="<%= dom_id food %>">
  <table>
    <th>
      <p>
      <strong>Name</strong>
      </p>
    </th>
    <th>
      <p>
    <strong>Measurement unit</strong>
      </p>
    </th>
    <th>
      <p>
      <strong>Price</strong>
      </p>
    </th>
    <th>
      <p>
      <strong>Quantity</strong>
      </p>
    </th>
    <th>
      <p>
      <strong>Actions</strong>
      </p>
    </th>

    <tr>
      <td>
      <%= food.name %>
      </td>
      <td>
      <%= food.measurement_unit %>
      </td>
