<%= stylesheet_link_tag "recipes.css" %>

<h1><%=@user.name %> Recipes List</h1>

<div id="recipes">
  <% if @recipes.empty? %>
     <h1>There are no recipes to show ! Try to Add one</h1>
  <% end %>
  <% @recipes.each do |recipe| %>
    <div class="recipes-container">
    <div class="recipes-card">
    <p class="recipes-title"><%= link_to recipe.name ,user_recipe_url(@user,recipe) %></p>
    <p class="recipes-description"><%= recipe.description %></p>
    <% if can? :manage, recipe %>
    <%= button_to "Delete" , user_recipe_path(recipe.user, recipe.id), method: :delete %>
    <% end %>
    </div>
    </div>
  <% end %>
</div>


