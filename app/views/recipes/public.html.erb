<div class="wrapper">

  <h1>Public Recipe List</h1>
  <% @public_recipes.each do |recipe| %>
    <div class="wrapper">
    <div class="card set-width my-3">
      <div class="card-body space-between">
        <div>
          <h3>
            <%= link_to recipe.name, user_recipe_path(id: recipe.id, user_id: recipe.user.id), class: "card-title" %>
          </h3>
          <h5>By: <%= recipe.user.name %>
          </h5>
        </div>
        <div>
          <% if recipe.public %>
          <span class="badge text-bg-warning p-2 px-4">Public</span>
          <% else %>
          <span class="badge text-bg-secondary p-2 px-4">Private</span>
          <% end %>
          <h5 class="mt-3">Total foods: <%= recipe.recipe_foods.length %> </h5>
          <% sum = 0 %>
          <h5>Total price : $ <% recipe.recipe_foods.each do |food| %>
          <% sum += food.food.price %>
          <% end %>
          <%= sum %></h5>
        </div>
      </div>
      <div class="card-body">
        <span>Description</span>
        <p class="card-text">
          <%= recipe.description %>
        </p>
        <div class="d-flex justify-content-end">
          <p class="opacity-50"><%= time_ago_in_words(recipe[:created_at]) %></p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <% if @public_recipes.empty? %>
    <h1>There are no public recipes to show</h1>
  <% end %>
</div>