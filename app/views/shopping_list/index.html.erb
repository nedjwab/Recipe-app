<h1>Shopping List</h1>
<h2>Amount of food items to buy: <%= @recipe_foods.count %></h2>
<h2>Total value of food needed: $<%= @total_price %></h2>
<table>
<thead>
<td>Food</td>
<td>Quantity</td>
<td>Price</td>
</thead>
<tbody id="shop">

<% @recipe_foods.each do |food| %>
<tr>
<td><%= food.food.name %></td>
<td><%= food.quantity %></td>
<td id="price" ><%= food.food.price*food.quantity %></td>
</tr>
<%end%>
</tbody>
</table>
